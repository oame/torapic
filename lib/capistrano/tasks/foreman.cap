namespace :foreman do
  desc "Export the Procfile to Ubuntu's upstart scripts"
  task :export do
    on roles(:app) do
      within release_path do
        execute :sudo, "mkdir -p #{shared_path}/log/foreman #{shared_path}/tmp/pids"
        execute :sudo, :bundle, :exec, "foreman export upstart /etc/init -f ./Procfile.production -a #{fetch(:application)} -u deployer -l #{shared_path}/log/foreman"
      end
    end
  end

  desc "Start the application services"
  task :start do
    on roles(:app) do
      execute :sudo, "/sbin/start #{fetch(:application)}"
    end
  end

  desc "Stop the application services"
  task :stop do
    on roles(:app) do
      execute :sudo, "/sbin/stop #{fetch(:application)}"
    end
  end

  desc "Restart the application services"
  task :restart do
    on roles(:app) do
      execute :sudo, "/sbin/restart #{fetch(:application)}"
    end
  end

end
