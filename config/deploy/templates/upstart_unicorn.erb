description "torapic - unicorn"

start on runlevel [2345]
stop on runlevel [016]

script
  APP_ROOT=<%= current_path %>
  PATH=<%= fetch(:rbenv_path) %>/shims:<%= fetch(:rbenv_path) %>/bin:$PATH

  cd $APP_ROOT && bundle exec unicorn_rails -c $APP_ROOT/config/unicorn.rb -E <%= fetch(:rails_env) %>
end script

respawn
