description "Torapic, sidekiq"

start on runlevel [2345]
stop on runlevel [016]

script
  APP_ROOT=<%= current_path %>
  PATH=<%= rbenv_path %>/shims:<%= rbenv_path %>/bin:$PATH

  cd $APP_ROOT && RAILS_ENV=<%= rails_env %> bundle exec sidekiq -i 0 -e <%= rails_env %> -C $APP_ROOT/config/sidekiq.yml >> /tmp/torapic_sidekiq.log 2>&1
end script

respawn
