description "Torapic, sidekiq"

start on runlevel [2345]
stop on runlevel [016]

script
  APP_ROOT=<%= current_path %>
  PATH=<%= fetch(:rbenv_path) %>/shims:<%= fetch(:rbenv_path) %>/bin:$PATH

  cd $APP_ROOT && RAILS_ENV=<%= fetch(:rails_env) %> bundle exec sidekiq -i 0 -e <%= fetch(:rails_env) %> -C $APP_ROOT/config/sidekiq.yml
end script

respawn
